<%= render 'admin/dashboard/navbar' %>

<div class="admin-dashboard min-h-screen bg-dark-400">
  <!-- Breadcrumb -->
  <div class="breadcrumb-section pt-20 pb-4">
    <div class="container-app">
      <nav class="flex items-center space-x-2 text-sm">
        <%= link_to admin_dashboard_index_path, class: "text-gray-400 hover:text-primary transition-colors" do %>
          <i class="fas fa-home mr-1"></i>Dashboard
        <% end %>
        <i class="fas fa-chevron-right text-gray-600"></i>
        <%= link_to admin_movies_path, class: "text-gray-400 hover:text-primary transition-colors" do %>
          Films
        <% end %>
        <i class="fas fa-chevron-right text-gray-600"></i>
        <span class="text-white"><%= @movie.title %></span>
      </nav>
    </div>
  </div>

  <!-- Movie Details Header -->
  <section class="movie-header py-8">
    <div class="container-app">
      <div class="glass-effect rounded-3xl p-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Movie Poster & Basic Info -->
          <div class="lg:col-span-1">
            <!-- Poster Placeholder -->
            <div class="w-full h-96 bg-gradient-to-br from-primary to-accent rounded-2xl flex items-center justify-center text-white text-4xl font-bold mb-6">
              <%= @movie.title.first(2).upcase %>
            </div>

            <!-- Status Badge -->
            <div class="text-center mb-6">
              <% case @movie.validation_status %>
              <% when 'pending' %>
                <span class="px-6 py-3 bg-yellow-500/20 text-yellow-300 rounded-xl text-lg font-medium">
                  <i class="fas fa-clock mr-2"></i>En attente de validation
                </span>
              <% when 'approved' %>
                <span class="px-6 py-3 bg-green-500/20 text-green-300 rounded-xl text-lg font-medium">
                  <i class="fas fa-check mr-2"></i>Film validé
                </span>
              <% when 'rejected' %>
                <span class="px-6 py-3 bg-red-500/20 text-red-300 rounded-xl text-lg font-medium">
                  <i class="fas fa-times mr-2"></i>Film rejeté
                </span>
              <% end %>
            </div>

            <!-- Action Buttons -->
            <% if @movie.pending? %>
              <div class="space-y-3">
                <%= button_to validate_movie_admin_movie_path(@movie),
                    method: :patch,
                    class: "w-full btn-primary",
                    data: { confirm: "Valider ce film ?" } do %>
                  <i class="fas fa-check mr-2"></i>Valider le Film
                <% end %>

                <%= button_to reject_movie_admin_movie_path(@movie),
                    method: :patch,
                    class: "w-full px-6 py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-xl transition-colors font-semibold",
                    data: { confirm: "Rejeter ce film ?" } do %>
                  <i class="fas fa-times mr-2"></i>Rejeter le Film
                <% end %>
              </div>
            <% end %>
          </div>

          <!-- Movie Information -->
          <div class="lg:col-span-2">
            <div class="space-y-6">
              <!-- Title & Director -->
              <div>
                <h1 class="text-4xl font-bold gradient-text mb-3">
                  <%= @movie.title %>
                </h1>
                <p class="text-xl text-gray-300">
                  Réalisé par <span class="text-primary font-semibold"><%= @movie.director %></span>
                </p>
              </div>

              <!-- Movie Details Grid -->
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="glass-subtle rounded-xl p-4">
                  <div class="text-sm text-gray-400 mb-1">Année</div>
                  <div class="text-lg font-semibold text-white"><%= @movie.year %></div>
                </div>
                <div class="glass-subtle rounded-xl p-4">
                  <div class="text-sm text-gray-400 mb-1">Durée</div>
                  <div class="text-lg font-semibold text-white"><%= @movie.duration %> min</div>
                </div>
                <div class="glass-subtle rounded-xl p-4">
                  <div class="text-sm text-gray-400 mb-1">Genre</div>
                  <div class="text-lg font-semibold text-white"><%= @movie.genre %></div>
                </div>
                <div class="glass-subtle rounded-xl p-4">
                  <div class="text-sm text-gray-400 mb-1">Langue</div>
                  <div class="text-lg font-semibold text-white"><%= @movie.language %></div>
                </div>
              </div>

              <!-- Synopsis -->
              <div>
                <h3 class="text-xl font-semibold text-white mb-3">
                  <i class="fas fa-file-alt text-primary mr-2"></i>Synopsis
                </h3>
                <div class="glass-subtle rounded-xl p-6">
                  <p class="text-gray-300 leading-relaxed">
                    <%= simple_format(@movie.synopsis) %>
                  </p>
                </div>
              </div>

              <!-- Creator Info -->
              <div>
                <h3 class="text-xl font-semibold text-white mb-3">
                  <i class="fas fa-user-plus text-primary mr-2"></i>Créateur
                </h3>
                <div class="glass-subtle rounded-xl p-6">
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center text-white font-bold">
                      <%= @movie.user&.full_name&.first(2)&.upcase || 'U' %>
                    </div>
                    <div>
                      <div class="text-lg font-semibold text-white">
                        <%= @movie.user&.full_name || 'Utilisateur inconnu' %>
                      </div>
                      <div class="text-sm text-gray-400">
                        <%= @movie.user&.email || 'Email non disponible' %>
                      </div>
                      <div class="text-xs text-gray-500">
                        Soumis le <%= @movie.created_at.strftime("%d %B %Y à %H:%M") %>
                      </div>
                    </div>
                  </div>
                </div>
