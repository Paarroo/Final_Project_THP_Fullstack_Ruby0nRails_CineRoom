<%= render 'admin/dashboard/navbar' %>

<div class="admin-dashboard min-h-screen bg-dark-400">
  <!-- Breadcrumb -->
  <div class="breadcrumb-section pt-20 pb-4">
    <div class="container-app">
      <nav class="flex items-center space-x-2 text-sm">
        <%= link_to admin_dashboard_index_path, class: "text-gray-400 hover:text-primary transition-colors" do %>
          <i class="fas fa-home mr-1"></i>Dashboard
        <% end %>
        <i class="fas fa-chevron-right text-gray-600"></i>
        <%= link_to admin_reviews_path, class: "text-gray-400 hover:text-primary transition-colors" do %>
          Avis
        <% end %>
        <i class="fas fa-chevron-right text-gray-600"></i>
        <span class="text-white">Avis #<%= @review.id %></span>
      </nav>
    </div>
  </div>

  <!-- Review Header -->
  <section class="review-header py-8">
    <div class="container-app">
      <div class="glass-effect rounded-3xl p-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Review Content -->
          <div class="lg:col-span-1">
            <!-- Rating Display -->
            <div class="text-center mb-8">
              <div class="flex items-center justify-center space-x-2 mb-4">
                <% if @review.rating %>
                  <% @review.rating.times do %>
                    <i class="fas fa-star text-yellow-400 text-4xl"></i>
                  <% end %>
                  <% (5 - @review.rating).times do %>
                    <i class="fas fa-star text-gray-600 text-4xl"></i>
                  <% end %>
                <% else %>
                  <span class="text-2xl text-gray-500">Pas de note attribuée</span>
                <% end %>
              </div>
              <% if @review.rating %>
                <div class="text-3xl font-bold text-yellow-400 mb-2">
                  <%= @review.rating %>/5
                </div>
              <% end %>
            </div>

            <!-- Comment Content -->
            <% if @review.comment.present? %>
              <div class="bg-white/5 rounded-2xl p-6 mb-6">
                <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                  <i class="fas fa-quote-left text-primary mr-2"></i>
                  Commentaire
                </h3>
                <div class="prose prose-invert max-w-none">
                  <p class="text-gray-300 leading-relaxed text-lg">
                    <%= simple_format(@review.comment) %>
                  </p>
                </div>
              </div>
            <% else %>
              <div class="bg-gray-800/50 rounded-2xl p-6 mb-6 text-center">
                <i class="fas fa-comment-slash text-4xl text-gray-600 mb-4"></i>
                <p class="text-gray-500 text-lg">Aucun commentaire fourni</p>
                <p class="text-sm text-gray-600 mt-2">L'utilisateur a seulement attribué une note</p>
              </div>
            <% end %>

            <!-- Quality & Sentiment Analysis -->
            <div class="grid grid-cols-2 gap-4">
              <div class="glass-subtle rounded-xl p-4">
                <div class="text-sm text-gray-400 mb-2">Score de qualité</div>
                <div class="flex items-center">
                  <div class="text-2xl font-bold text-primary mr-2">
                    <%= @quality_score %>/100
                  </div>
                  <div class="flex-1 bg-gray-700 rounded-full h-2">
                    <div class="bg-gradient-to-r from-primary to-accent h-2 rounded-full"
                         style="width: <%= @quality_score %>%"></div>
                  </div>
                </div>
              </div>

              <div class="glass-subtle rounded-xl p-4">
                <div class="text-sm text-gray-400 mb-2">Analyse sentiment</div>
                <div class="flex items-center">
                  <% case @sentiment_analysis[:sentiment] %>
                  <% when 'positive' %>
                    <i class="fas fa-smile text-green-400 text-2xl mr-2"></i>
                    <span class="text-green-400 font-semibold">Positif</span>
                  <% when 'negative' %>
                    <i class="fas fa-frown text-red-400 text-2xl mr-2"></i>
                    <span class="text-red-400 font-semibold">Négatif</span>
                  <% else %>
                    <i class="fas fa-meh text-gray-400 text-2xl mr-2"></i>
                    <span class="text-gray-400 font-semibold">Neutre</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <!-- Review Metadata -->
          <div class="lg:col-span-1">
            <div class="space-y-6">
              <!-- User Information -->
              <div>
                <h3 class="text-xl font-semibold text-white mb-4">
                  <i class="fas fa-user text-primary mr-2"></i>Auteur de l'avis
                </h3>
                <div class="glass-subtle rounded-xl p-6">
                  <div class="flex items-center space-x-4 mb-4">
                    <div class="w-16 h-16 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center text-white font-bold text-xl">
                      <%= @review.user&.full_name&.first(2)&.upcase || @review.user&.email&.first(2)&.upcase || 'U' %>
                    </div>
                    <div>
                      <div class="text-lg font-semibold text-white">
                        <%= @review.user&.full_name || 'Utilisateur inconnu' %>
                      </div>
                      <div class="text-sm text-gray-400">
                        <%= @review.user&.email %>
                      </div>
                      <div class="text-xs text-gray-500 mt-1">
                        <% case @review.user&.role %>
                        <% when 'admin' %>
                          <span class="px-2 py-1 bg-red-500/20 text-red-400 rounded">Administrateur</span>
                        <% when 'creator' %>
                          <span class="px-2 py-1 bg-purple-500/20 text-purple-400 rounded">Créateur</span>
                        <% else %>
                          <span class="px-2 py-1 bg-blue-500/20 text-blue-400 rounded">Utilisateur</span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <div class="text-sm text-gray-400">
                    <div class="flex justify-between mb-1">
                      <span>Total d'avis :</span>
                      <span class="text-primary"><%= @review.user&.reviews&.count || 0 %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Note moyenne donnée :</span>
                      <span class="text-yellow-400">
                        <%= @review.user&.reviews&.average(:rating)&.round(1) || 0 %>/5
                      </span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Movie Information -->
              <div>
                <h3 class="text-xl font-semibold text-white mb-4">
                  <i class="fas fa-film text-primary mr-2"></i>Film évalué
                </h3>
                <div class="glass-subtle rounded-xl p-6">
                  <h4 class="text-lg font-semibold text-white mb-2">
                    <%= @review.movie&.title || 'Film inconnu' %>
                  </h4>
                  <div class="space-y-2 text-sm text-gray-400">
                    <div class="flex justify-between">
                      <span>Réalisateur :</span>
                      <span><%= @review.movie&.director || 'Inconnu' %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Année :</span>
                      <span><%= @review.movie&.year || 'Inconnue' %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Genre :</span>
                      <span><%= @review.movie&.genre || 'Inconnu' %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Note moyenne :</span>
                      <span class="text-yellow-400">
                        <%= @review.movie&.reviews&.average(:rating)&.round(1) || 0 %>/5
                      </span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Event Information -->
              <div>
                <h3 class="text-xl font-semibold text-white mb-4">
                  <i class="fas fa-calendar-alt text-primary mr-2"></i>Événement
                </h3>
                <div class="glass-subtle rounded-xl p-6">
                  <h4 class="text-lg font-semibold text-white mb-2">
                    <%= @review.event&.title || 'Événement inconnu' %>
                  </h4>
                  <div class="space-y-2 text-sm text-gray-400">
                    <div class="flex justify-between">
                      <span>Date :</span>
                      <span><%= @review.event&.event_date&.strftime("%d %B %Y") || 'Inconnue' %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Lieu :</span>
                      <span><%= @review.event&.venue_name || 'Inconnu' %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Délai d'écriture :</span>
                      <span>
                        <% if @review.event&.event_date %>
                          <% days_diff = (@review.created_at.to_date - @review.event.event_date).to_i %>
                          <%= days_diff %> jour<%= 's' if days_diff.abs > 1 %>
                          <%= days_diff >= 0 ? 'après' : 'avant' %> l'événement
                        <% else %>
                          Inconnu
                        <% end %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Review Metadata -->
              <div>
                <h3 class="text-xl font-semibold text-white mb-4">
                  <i class="fas fa-info-circle text-primary mr-2"></i>Informations
                </h3>
                <div class="glass-subtle rounded-xl p-6">
                  <div class="space-y-2 text-sm text-gray-400">
                    <div class="flex justify-between">
                      <span>Écrit le :</span>
                      <span><%= @review.created_at.strftime("%d %B %Y à %H:%M") %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Modifié le :</span>
                      <span><%= @review.updated_at.strftime("%d %B %Y à %H:%M") %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Longueur commentaire :</span>
                      <span><%= @review.comment&.length || 0 %> caractères</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
