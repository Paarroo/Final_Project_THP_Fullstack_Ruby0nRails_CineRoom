<%= form_with(model: creator, class: "contents") do |form| %>
  <% if creator.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(creator.errors.count, "error") %> prohibited this creator from being saved:</h2>

      <ul class="list-disc ml-6">
        <% creator.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": creator.errors[:user_id].none?, "border-red-400 focus:outline-red-600": creator.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :bio %>
    <%= form.textarea :bio, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": creator.errors[:bio].none?, "border-red-400 focus:outline-red-600": creator.errors[:bio].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.number_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": creator.errors[:status].none?, "border-red-400 focus:outline-red-600": creator.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :verified_at %>
    <%= form.datetime_field :verified_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": creator.errors[:verified_at].none?, "border-red-400 focus:outline-red-600": creator.errors[:verified_at].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
