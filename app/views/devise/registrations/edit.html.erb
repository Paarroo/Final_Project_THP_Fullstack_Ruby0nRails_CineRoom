<div class="min-h-screen flex items-center justify-center bg-dark-400 px-4 py-20">
  <div class="w-full max-w-lg bg-dark-300 rounded-3xl shadow-lg p-8">
    
    <!-- Title -->
    <div class="text-center mb-8">
      <h2 class="text-4xl font-bold text-white mb-2">Modifier votre compte</h2>
      <p class="text-sm text-gray-400">Mettez à jour vos informations personnelles</p>
    </div>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-white mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder-gray-400 focus:ring-2 focus:ring-gold-500 focus:outline-none" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="text-sm text-yellow-400 mb-4">En attente de confirmation pour : <%= resource.unconfirmed_email %></p>
      <% end %>

      <!-- Password -->
      <div>
        <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-medium text-white mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Laissez vide si inchangé", class: "w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder-gray-400" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-400 mt-1"><%= @minimum_password_length %> caractères minimum</p>
        <% end %>
      </div>

      <!-- Password confirmation -->
      <div>
        <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "block text-sm font-medium text-white mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder-gray-400" %>
      </div>

      <!-- Current password -->
      <div>
        <%= f.label :current_password, "Mot de passe actuel", class: "block text-sm font-medium text-white mb-1" %>
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Obligatoire pour confirmer les modifications", class: "w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder-gray-400" %>
      </div>

      <!-- Submit -->
      <div>
        <%= f.submit "Mettre à jour", class: "w-full bg-gradient-to-r from-gold-500 to-gold-600 hover:from-gold-600 hover:to-gold-700 text-white font-semibold py-3 px-4 rounded-xl transition duration-300" %>
      </div>
    <% end %>

    <!-- Cancel account -->
    <div class="mt-10 text-center border-t border-white/10 pt-6">
      <h3 class="text-xl font-bold text-white mb-2">Supprimer mon compte</h3>
      <p class="text-sm text-gray-400 mb-4">Vous ne voulez plus utiliser CinéRoom ?</p>
      <%= button_to "Supprimer définitivement", registration_path(resource_name),
          method: :delete,
          data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer votre compte ?" },
          class: "bg-red-600 hover:bg-red-700 text-white font-medium px-6 py-3 rounded-xl transition" %>
    </div>

    <!-- Back -->
    <div class="text-center mt-6">
      <%= link_to "← Retour", root_path, class: "text-gray-400 hover:text-white transition font-medium text-sm" %>
    </div>

  </div>
</div>
