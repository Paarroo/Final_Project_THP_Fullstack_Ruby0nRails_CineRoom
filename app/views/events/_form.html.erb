<%= form_with(model: event, class: "contents") do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul class="list-disc ml-6">
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :movie_id %>
    <%= form.text_field :movie_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:movie_id].none?, "border-red-400 focus:outline-red-600": event.errors[:movie_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:title].none?, "border-red-400 focus:outline-red-600": event.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:description].none?, "border-red-400 focus:outline-red-600": event.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :venue_name %>
    <%= form.text_field :venue_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:venue_name].none?, "border-red-400 focus:outline-red-600": event.errors[:venue_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :venue_address %>
    <%= form.text_field :venue_address, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:venue_address].none?, "border-red-400 focus:outline-red-600": event.errors[:venue_address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :event_date %>
    <%= form.date_field :event_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:event_date].none?, "border-red-400 focus:outline-red-600": event.errors[:event_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :start_time %>
    <%= form.time_field :start_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:start_time].none?, "border-red-400 focus:outline-red-600": event.errors[:start_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :max_capacity %>
    <%= form.number_field :max_capacity, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:max_capacity].none?, "border-red-400 focus:outline-red-600": event.errors[:max_capacity].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price_cents %>
    <%= form.number_field :price_cents, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:price_cents].none?, "border-red-400 focus:outline-red-600": event.errors[:price_cents].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:status].none?, "border-red-400 focus:outline-red-600": event.errors[:status].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
