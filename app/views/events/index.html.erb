<!-- app/views/pages/events.html.erb -->
<div id="events" class="page-content active mt-24">
  <section class="py-8 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header -->
      <div class="mb-12 text-center">
        <h1 class="text-4xl lg:text-6xl font-bold mb-4">
          Tous nos <span class="gradient-text">Événements</span>
        </h1>
        <p class="text-xl text-gray-400">Découvrez notre programmation complète</p>
      </div>

      <!-- Filters -->
      <div class="glass-effect rounded-2xl p-6 mb-12">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
          <div class="relative">
            <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            <input type="text" placeholder="Rechercher un film..." class="w-full pl-12 pr-4 py-3 bg-white/5 border border-white/10 rounded-xl focus:ring-2 focus:ring-gold-500 focus:border-transparent text-white placeholder-gray-400">
          </div>
          <select class="px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:ring-2 focus:ring-gold-500">
            <option class="bg-dark-300">🗓️ Toutes les dates</option>
            <option class="bg-dark-300">Cette semaine</option>
            <option class="bg-dark-300">Ce mois</option>
          </select>
          <select class="px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:ring-2 focus:ring-gold-500">
            <option class="bg-dark-300">🎭 Tous les genres</option>
            <option class="bg-dark-300">Drame</option>
            <option class="bg-dark-300">Thriller</option>
            <option class="bg-dark-300">Comédie</option>
          </select>
          <select class="px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:ring-2 focus:ring-gold-500">
            <option class="bg-dark-300">📍 Tous les lieux</option>
            <option class="bg-dark-300">Marais</option>
            <option class="bg-dark-300">République</option>
            <option class="bg-dark-300">16e arr.</option>
          </select>
        </div>
      </div>

      <!-- Event Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
        <%= render partial: "event_card", collection: @events, as: :event %>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center mt-16">
        <%#= paginate @events, theme: "tailwind" %>
      </div>

    </div>
  </section>
</div>
