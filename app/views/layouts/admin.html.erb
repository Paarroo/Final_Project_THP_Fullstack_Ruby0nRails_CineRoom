<!DOCTYPE html>
<html data-controller="admin" class="scroll-smooth bg-dark-400">
  <head>
    <title>ðŸŽ¬<%= content_for(:title) || "CinÃ©Room Admin - Dashboard" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <!-- Icons -->
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">

    <!-- FONTS - Consistent with main app -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- CSS - Application styles + Admin overrides -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "active_admin", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <style>
      /* Admin-specific styles */
      .admin-layout {
        background: #0a0a0a;
        min-height: 100vh;
        color: white;
      }

      .admin-content {
        margin-top: 80px; /* Account for fixed navbar */
        padding-bottom: 2rem;
      }

      .glass-effect {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .metric-card {
        transition: all 0.3s ease;
      }

      .metric-card:hover {
        transform: translateY(-2px);
        border-color: rgba(245, 158, 11, 0.3);
      }

      .gradient-text {
        background: linear-gradient(135deg, #fbbf24, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .admin-navbar {
        backdrop-filter: blur(20px);
        background: rgba(10, 10, 10, 0.9);
      }
    </style>
  </head>

  <body class="admin-layout" data-admin-target="body">
    <!-- Admin Navbar (using your existing navbar with admin modifications) -->
    <nav class="admin-navbar fixed top-0 w-full z-50 border-b border-white/10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <%= link_to admin_root_path, class: "flex items-center space-x-3 cursor-pointer" do %>
            <div class="w-10 h-10 bg-gradient-to-br from-primary to-primary/90 rounded-xl flex items-center justify-center">
              <i class="fas fa-film text-white text-lg"></i>
            </div>
            <div class="flex flex-col">
              <span class="text-xl font-bold tracking-tight text-white">CinÃ©Room</span>
              <span class="text-xs text-gray-400 uppercase tracking-widest">Admin Panel</span>
            </div>
          <% end %>

          <!-- Admin Navigation -->
          <div class="hidden lg:flex items-center space-x-8">
            <%= link_to admin_root_path,
                class: "text-gray-300 hover:text-primary transition-colors duration-200 font-medium #{'text-primary' if current_page?(admin_root_path)}" do %>
              <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
            <% end %>

            <%= link_to admin_movies_path,
                class: "text-gray-300 hover:text-primary transition-colors duration-200 font-medium #{'text-primary' if current_page?(admin_movies_path)}" do %>
              <i class="fas fa-film mr-2"></i>Films
            <% end %>

            <%= link_to admin_events_path,
                class: "text-gray-300 hover:text-primary transition-colors duration-200 font-medium #{'text-primary' if current_page?(admin_events_path)}" do %>
              <i class="fas fa-calendar-alt mr-2"></i>Ã‰vÃ©nements
            <% end %>

            <%= link_to admin_users_path,
                class: "text-gray-300 hover:text-primary transition-colors duration-200 font-medium #{'text-primary' if current_page?(admin_users_path)}" do %>
              <i class="fas fa-users mr-2"></i>Utilisateurs
            <% end %>

            <%= link_to admin_participations_path,
                class: "text-gray-300 hover:text-primary transition-colors duration-200 font-medium #{'text-primary' if current_page?(admin_participations_path)}" do %>
              <i class="fas fa-ticket-alt mr-2"></i>RÃ©servations
            <% end %>
          </div>

          <!-- Admin User Actions -->
          <div class="hidden lg:flex items-center space-x-4">
            <!-- Quick Stats -->
            <div class="text-sm text-gray-400">
              <span class="mr-4">
                <i class="fas fa-clock mr-1 text-primary"></i>
                <%= Time.current.strftime("%H:%M") %>
              </span>
            </div>

            <!-- User Menu -->
            <div class="relative" data-controller="dropdown">
              <button
                class="flex items-center space-x-2 p-2 rounded-xl hover:bg-white/5 transition-colors"
                data-action="click->dropdown#toggle"
              >
                <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center">
                  <span class="text-xs font-bold text-white">
                    <%= current_user&.first_name&.first&.upcase || 'A' %>
                  </span>
                </div>
                <span class="text-sm font-medium text-white">
                  <%= current_user&.full_name || 'Admin' %>
                </span>
                <i class="fas fa-chevron-down text-xs text-gray-400"></i>
              </button>

              <!-- Dropdown Menu -->
              <div
                class="absolute right-0 top-12 w-48 glass-effect rounded-xl border border-white/10 p-2 hidden"
                data-dropdown-target="menu"
              >
                <%= link_to root_path,
                    class: "block px-4 py-2 text-sm text-gray-300 hover:text-white hover:bg-white/10 rounded-lg transition-colors" do %>
                  <i class="fas fa-home mr-2"></i>Site Public
                <% end %>

                <%= button_to destroy_user_session_path, method: :delete,
                    class: "w-full text-left px-4 py-2 text-sm text-gray-300 hover:text-white hover:bg-white/10 rounded-lg transition-colors" do %>
                  <i class="fas fa-sign-out-alt mr-2"></i>DÃ©connexion
                <% end %>
              </div>
            </div>
          </div>

          <!-- Mobile Menu Button -->
          <button class="lg:hidden w-10 h-10 bg-white/10 rounded-full flex items-center justify-center">
            <i class="fas fa-bars text-gray-300"></i>
          </button>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice || alert %>
      <%= render 'shared/admin/flash_messages' %>
    <% end %>

    <!-- Main Content -->
    <main class="admin-content">
      <%= yield %>
    </main>

    <!-- Admin Footer (simplified version of your main footer) -->
    <footer class="bg-dark-300 border-t border-white/10 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
          <div class="flex items-center space-x-3 mb-4 md:mb-0">
            <div class="w-8 h-8 bg-gradient-to-br from-primary to-primary/80 rounded-lg flex items-center justify-center">
              <i class="fas fa-film text-white text-sm"></i>
            </div>
            <div>
              <span class="text-lg font-bold text-white">CinÃ©Room Admin</span>
              <div class="text-xs text-gray-400">Panel d'administration</div>
            </div>
          </div>

          <div class="text-sm text-gray-400">
            Â© 2025 CinÃ©Room. Version Admin v1.0
          </div>
        </div>
      </div>
    </footer>

    <!-- Admin Modals Container -->
    <div id="admin-modals" data-admin-target="modals"></div>
  </body>
</html>
