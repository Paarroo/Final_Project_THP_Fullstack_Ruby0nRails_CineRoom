<section class="py-20 lg:py-32 bg-gradient-to-br from-dark-400 via-dark-300 to-dark-400 relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-6xl font-bold mb-6">
        <span class="gradient-text">Films</span> à l'affiche
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Explorez notre collection de films sélectionnés avec soin.
      </p>
    </div>

    <!-- Search and Filters -->
    <div class="mb-12 max-w-4xl mx-auto">
      <%= form_with url: movies_path, method: :get, local: true, class: "bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10" do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <!-- Search field -->
          <div>
            <%= form.label :search, "Rechercher", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.text_field :search,
                placeholder: "Titre du film...",
                value: params[:search],
                class: "w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-cinema-blue" %>
          </div>

          <!-- Genre filter -->
          <div>
            <%= form.label :genre, "Genre", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.select :genre,
                options_for_select([['Tous les genres', '']] + @genres.map { |g| [g, g] }, params[:genre]),
                {},
                class: "w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-cinema-blue" %>
          </div>

          <!-- Year filter -->
          <div>
            <%= form.label :year, "Année", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.select :year,
                options_for_select([['Toutes les années', '']] + @years.map { |y| [y, y] }, params[:year]),
                {},
                class: "w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-cinema-blue" %>
          </div>

          <!-- Language filter -->
          <div>
            <%= form.label :language, "Langue", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.select :language,
                options_for_select([['Toutes les langues', '']] + @languages, params[:language]),
                {},
                class: "w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-cinema-blue" %>
          </div>
        </div>

        <!-- Search buttons -->
        <div class="flex flex-wrap gap-3 mt-6">
          <%= form.submit "Filtrer",
              class: "px-6 py-2 bg-gradient-to-r from-cinema-blue to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white rounded-lg font-semibold transition-all duration-300" %>

          <%= link_to "Réinitialiser", movies_path,
              class: "px-6 py-2 bg-white/10 hover:bg-white/20 text-white rounded-lg font-semibold transition-all duration-300 border border-white/20" %>

          <%= link_to "Films populaires", featured_movies_path,
              class: "px-6 py-2 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white rounded-lg font-semibold transition-all duration-300" %>
        </div>
      <% end %>
    </div>

    <!-- Results info -->
    <% if params[:search].present? || params[:genre].present? || params[:year].present? || params[:language].present? %>
      <div class="mb-8 text-center">
        <p class="text-gray-400">
          <%= pluralize(@movies.count, 'film') %> trouvé<%= 's' if @movies.count > 1 %>
          <% if params[:search].present? %>
            pour "<span class="text-cinema-blue font-medium"><%= params[:search] %></span>"
          <% end %>
        </p>
      </div>
    <% end %>

    <!-- Movies Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% if @movies.any? %>
        <% @movies.each do |movie| %>
          <%= render partial: "movies/movie_card", locals: { movie: movie } %>
        <% end %>
      <% else %>
        <!-- Empty state -->
        <div class="col-span-full text-center py-16">
          <div class="max-w-md mx-auto">
            <div class="w-24 h-24 mx-auto mb-6 bg-gradient-to-br from-cinema-blue to-purple-600 rounded-full flex items-center justify-center">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m0 0V1h4a1 1 0 011 1v18a1 1 0 01-1 1H3a1 1 0 01-1-1V2a1 1 0 011-1h4v3"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">Aucun film trouvé</h3>
            <p class="text-gray-400 mb-6">Essayez de modifier vos critères de recherche ou découvrez notre sélection complète.</p>
            <%= link_to "Voir tous les films", movies_path, class: "inline-block px-6 py-2 bg-cinema-blue hover:bg-blue-600 text-white rounded-lg font-semibold transition-colors" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- CTA -->
    <div class="text-center mt-16">
      <%= link_to "Proposer un film", new_movie_path, class: "px-8 py-4 bg-gradient-to-r from-cinema-blue to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white rounded-full font-semibold transition-all duration-300 hover:scale-105" %>
    </div>
  </div>
</section>
