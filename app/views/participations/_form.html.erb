<%= form_with(model: [ @event, participation ], class: "contents") do |form| %>
  <% if participation.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(participation.errors.count, "error") %> prevented the reservation:</h2>
      <ul class="list-disc ml-6">
        <% participation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# -- Champ pour le nombre de places -- %>
  <div class="my-5">
    <%= form.label :seats, "Number of seats" %>
    <%= form.number_field :seats,
          in: 1..@event.available_spots,
          value: 1,
          required: true,
          class: [
            "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
            { "border-gray-400 focus:outline-blue-600": participation.errors[:seats].none?,
              "border-red-400 focus:outline-red-600": participation.errors[:seats].any? }
          ] %>
  </div>

  <%# -- Bouton de soumission -- %>
  <div class="inline">
    <%= form.submit "Book my seat(s)", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
  </div>
<% end %>
