<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-12 px-4">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center space-x-3 mb-4">
        <div class="w-16 h-16 bg-gradient-to-br from-yellow-400 via-orange-500 to-red-600 rounded-2xl flex items-center justify-center shadow-2xl">
          <span class="text-2xl">🎬</span>
        </div>
        <div>
          <h1 class="text-3xl font-bold gradient-text">QR Code d'Entrée</h1>
          <p class="text-slate-400">Billet #<%= @participation.id.to_s.rjust(6, '0') %></p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- QR Code Section -->
      <div class="glass-effect p-8 rounded-3xl">
        <div class="text-center mb-6">
          <h2 class="text-2xl font-bold text-white mb-2">🔍 Code d'Entrée</h2>
          <p class="text-slate-400">Présentez ce code à l'entrée de l'événement</p>
        </div>

        <div class="bg-white p-6 rounded-2xl mb-6 inline-block mx-auto block">
          <div class="w-64 h-64 mx-auto">
            <%= image_tag participation_qr_code_path(@participation, format: :png), 
                alt: "QR Code pour l'entrée", 
                class: "w-full h-full object-contain" %>
          </div>
        </div>

        <div class="text-center space-y-4">
          <% if @participation.used? %>
            <div class="bg-red-500/20 border border-red-500/30 rounded-xl p-4">
              <p class="text-red-400 font-semibold">✅ Billet déjà utilisé</p>
              <p class="text-red-300 text-sm">
                Entrée validée le <%= I18n.l(@participation.used_at, format: :short) %>
              </p>
            </div>
          <% else %>
            <div class="bg-green-500/20 border border-green-500/30 rounded-xl p-4">
              <p class="text-green-400 font-semibold">🟢 Billet valide</p>
              <p class="text-green-300 text-sm">Prêt pour l'entrée</p>
            </div>
          <% end %>

          <!-- Download Options -->
          <div class="flex flex-wrap justify-center gap-3 mt-6">
            <%= link_to participation_qr_code_path(@participation, format: :png),
                class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center space-x-2",
                download: "ticket_qr_#{@participation.id}.png" do %>
              <span>📱</span>
              <span>PNG</span>
            <% end %>
            
            <%= link_to participation_qr_code_path(@participation, format: :svg),
                class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center space-x-2",
                download: "ticket_qr_#{@participation.id}.svg" do %>
              <span>🖼️</span>
              <span>SVG</span>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Event Details -->
      <div class="space-y-6">
        <!-- Event Info -->
        <div class="glass-effect p-6 rounded-2xl">
          <h3 class="text-xl font-bold text-white mb-4 flex items-center">
            <span class="mr-2">🎭</span>
            Détails de l'événement
          </h3>
          
          <div class="space-y-4 text-slate-300">
            <div>
              <p class="font-semibold text-white text-lg"><%= @participation.event.title %></p>
              <p class="text-slate-400">Film : <%= @participation.event.movie.title %></p>
            </div>

            <div class="flex items-center space-x-3">
              <span>📅</span>
              <div>
                <p class="font-medium text-white">
                  <%= I18n.l(@participation.event.event_date, format: :long) %>
                </p>
                <p class="text-sm text-slate-400">
                  <%= @participation.event.start_time.strftime('%H:%M') %>
                </p>
              </div>
            </div>

            <div class="flex items-center space-x-3">
              <span>📍</span>
              <div>
                <p class="font-medium text-white"><%= @participation.event.venue_name %></p>
                <p class="text-sm text-slate-400"><%= @participation.event.venue_address %></p>
              </div>
            </div>

            <div class="flex items-center space-x-3">
              <span>👤</span>
              <div>
                <p class="font-medium text-white"><%= @participation.user.full_name %></p>
                <p class="text-sm text-slate-400">
                  <%= pluralize(@participation.seats, 'place') %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Technical Info -->
        <div class="glass-effect p-6 rounded-2xl">
          <h3 class="text-xl font-bold text-white mb-4 flex items-center">
            <span class="mr-2">🔧</span>
            Informations techniques
          </h3>
          
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-slate-400">Token :</span>
              <span class="text-slate-300 font-mono text-xs">
                <%= @participation.qr_code_token[0..15] %>...
              </span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-400">Statut :</span>
              <span class="text-slate-300 capitalize">
                <%= @participation.status %>
              </span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-slate-400">Généré le :</span>
              <span class="text-slate-300">
                <%= I18n.l(@participation.created_at, format: :short) %>
              </span>
            </div>
            
            <% if @participation.used? %>
              <div class="flex justify-between">
                <span class="text-slate-400">Utilisé le :</span>
                <span class="text-green-400">
                  <%= I18n.l(@participation.used_at, format: :short) %>
                </span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-wrap gap-3">
          <%= link_to participation_ticket_path(@participation),
              class: "bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-xl transition-colors flex items-center space-x-2 font-medium" do %>
            <span>🎫</span>
            <span>Voir le billet complet</span>
          <% end %>
          
          <%= link_to users_dashboard_path(current_user),
              class: "bg-slate-600 hover:bg-slate-700 text-white px-6 py-3 rounded-xl transition-colors flex items-center space-x-2" do %>
            <span>👤</span>
            <span>Mon tableau de bord</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Instructions -->
    <div class="mt-8 glass-effect p-6 rounded-2xl">
      <h3 class="text-xl font-bold text-white mb-4 flex items-center">
        <span class="mr-2">📋</span>
        Instructions d'utilisation
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-slate-300">
        <div>
          <h4 class="font-semibold text-white mb-2">À l'arrivée :</h4>
          <ul class="space-y-1 text-sm">
            <li>• Arrivez 15 minutes avant l'heure</li>
            <li>• Présentez ce QR code à l'entrée</li>
            <li>• Ayez votre pièce d'identité si demandée</li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-semibold text-white mb-2">Pendant l'événement :</h4>
          <ul class="space-y-1 text-sm">
            <li>• Gardez votre billet jusqu'à la fin</li>
            <li>• Ce billet est personnel et non transférable</li>
            <li>• Respectez les consignes de sécurité</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>