<% event = participation.event %>
<div class="glass-effect p-4 rounded-xl flex justify-between items-center">
  <div>
    <h3 class="text-lg font-semibold"><%= event.title %></h3>
    <p class="text-gray-300 text-sm">
      Le <%= l(event.event_date, format: "%d %B %Y") %> à <%= event.start_time.strftime("%Hh%M") %> – 
      <%= event.venue_name %>
    </p>
    <p class="text-gray-400 text-sm">Nombre de places : <%= participation.seats %></p>
  </div>
  <%= link_to "Voir l’événement", event_path(event),
      class: "text-sm text-gold-400 hover:underline" %>
</div>
