<!-- _participation_card.html.erb -->
<% event = participation.event %>
<div class="glass-effect p-4 rounded-2xl text-white hover:bg-white/10 transition-all duration-300">
  <div class="flex justify-between items-center mb-2">
    <h4 class="text-lg font-bold"><%= event.title %></h4>
    <span class="text-sm text-gray-400"><%= pluralize(participation.seats, 'place') %></span>
  </div>
  <p class="text-sm text-gray-300">
    Le <%= l(event.event_date, format: :long) %> à <%= event.start_time.strftime('%Hh%M') %> —
    <%= event.venue_name %>
  </p>
  <div class="mt-2 flex justify-end">
    <%= link_to "Voir l'événement", event_path(event),
                class: "text-sm text-cinema-blue hover:underline" %>
  </div>
</div>
